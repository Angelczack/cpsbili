/* pages/dongtai/dongtai.wxss */

/* 全局 */
page{
  background-color: #f1f2f2;
}
/* 头部 */
.top{
  width: 100%;
  height: 60rpx;
  background-color: #ff9bb9;
}

.select{
  border-bottom: 6rpx solid #fff;
}
.normal{
  color: #fff;
}

/* 状态 */
.nav{
width: 100%;
height: 100rpx;
/* background-color: pink;  */
display: flex;
justify-content: space-around;
align-items: center;
background-color: #fff;
}
.nav-btn{
  width: 18%;
  height: 60rpx;
  background-color: #f1f2f2;
  display: flex;
  justify-content:center;
  align-items: center;
  font-size: 28rpx;
  color: #444;
  border-radius: 10rpx;
}
.nav-btn:nth-child(1){
  color: #ff9bb9;
}

/* 最常访问 */
.cont-img{
  width: 120rpx;
  height: 120rpx;
  /* background-color: aquamarine; */
}
.cont-word{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 40rpx;
  /* background-color: #ff9bb9; */
  font-size:25rpx;
}

.bg1{
  background-color: #fff;
}

/* 公告 */
.bg2{
  background-color: #fff;
}
.notice{
  width: 100%;
  height: 400rpx;
  margin-top: 30rpx;
}
.notice-top{
  display: flex;
  justify-content: space-between;
}
.notice-top-left{
  width: 30%;
  margin-top: 20rpx;
display: flex;
align-items: center;
font-size: 30rpx;

}
.notice-top-left-img{
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
}
.notice-top-right{
  width: 35%;
  margin-top: 20rpx;
  text-align: right;
  margin-right: 20rpx;
}
.notice-con{
  height: 320rpx;
  /* background-color: pink; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}
.notice-con-left{
  width: 50%;
  height: 300rpx;
  /* background-color: aquamarine; */
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.notice-con-left-word{margin-left: 10rpx;}
.notice-con-right{
  width: 50%;
  height: 300rpx;
  /* background-color: lightcoral; */
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.notice-con-right-word{margin-left: 10rpx;}


/* 下拉列表+板块 */
.bg3{
  background-color: #fff;
}

.users{
  width: 100%;
  height: 200rpx;
  margin-top: 30rpx;
  /* background-color: lightcoral; */
}

.vus{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.vus-left{
  width: 45%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 20rpx;
}
.vus-icon{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}
.vus-right{
  width: 80rpx;
  height: 80rpx;
  margin-top: 20rpx;
}

/* 动态的内容 pic or other */
.info{
  width: 100%;
  height: 600rpx;
  /* background-color: pink; */
}
.info-pic{
  width: 90%;
  height: 400rpx;
  margin-left: 30rpx;
}
